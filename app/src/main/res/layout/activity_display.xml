<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_actiion_background2"
    android:orientation="vertical"
    tools:context="com.example.hw8_weatherapp_v1.DisplayActivity" >

    <TextView
        android:id="@+id/cityView"
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:gravity="center"
        android:text="TextView" />

    <TextView
        android:id="@+id/tempView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="TextView" />

    <TextView
        android:id="@+id/feelsView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="TextView" />

    <TextView
        android:id="@+id/maxView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="TextView" />

    <TextView
        android:id="@+id/minView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="TextView" />

    <fragment
        android:id="@+id/fragment"
        android:name="com.example.hw8_weatherapp_v1.MapsFragment"
        android:layout_width="match_parent"
        android:layout_height="352dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="bottom|center"
        android:text="Belal Mahmood : Z23123449" />

    <Button
        android:id="@+id/open_map1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Detailed Map" />

</LinearLayout>